<div class="container">
	<h1>Ventas</h1>
	<div class="card">
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th>Date</th>
						<th>Vehicle</th>
						<th>Price</th>
						<th>User</th>
					</tr>
				</thead>
				<tbody>
					<% if @sales.empty? %>
						<p><strong>No data</strong></p>
					<% else %>
						<% @sales.each do |sale| %>
							<tr>
								<%= render sale %>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>


		</div>
	</div>
</div>